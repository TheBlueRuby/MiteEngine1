{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: mingw32-gcc build active file",

			//replace C:/dev/ with wherever you installed msys2 mingw32 to. I installed it to C:/dev but the default may be C:/. Replace \ with /
            "command": "C:/dev/msys64/mingw32/bin/g++.exe",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-pthread",
				//Replace C:\\dev with where you installed MSYS2 mingw32 to, but replace a \ with a \\
                "-I \"C:\\dev\\msys64\\mingw32\\include\"",
				//Replace C:\\FluidSynth\\ with where you put FluidSynth files but replace a \ with a \\
                "-I \"C:\\dev\\FluidSynth\\include\"",
				//Replace C:\\dev with where you installed MSYS2 mingw32 to, but replace a \ with a \\
                "-L\"C:\\dev\\msys64\\mingw32\\lib\"",
				//Replace C:\\FluidSynth\\ with where you put FluidSynth files but replace a \ with a \\
                "-L\"C:\\dev\\FluidSynth\\lib\"",
                "-lfreeglut",
                "-lopengl32",
                "-lglu32",
                "-lglut32",
                "-lfluidsynth"
            ],
            "options": {
                "cwd": "C:/dev/msys64/mingw32/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}